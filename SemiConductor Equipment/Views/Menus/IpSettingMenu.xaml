<Page x:Class="SemiConductor_Equipment.Views.Menus.IpSettingMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
        d:DataContext="{d:DesignInstance local:IpSettingMenu, IsDesignTimeCreatable=False}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="IP_Setting"
        KeepAlive="True"
        Background="#232C39">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#263043" CornerRadius="9" Margin="18,18,18,8" Padding="12" Effect="{DynamicResource DropShadow}">
            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                <!-- 왼쪽: Chamber 선택, 검색 -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <ui:TextBlock Text="Chamber Name :" Height="21" FontFamily="Calibri" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbxChamber"
                  IsEditable="True"
                  Text="{Binding ViewModel.SelectChamberName}"
                  SelectedItem="{Binding ViewModel.SelectChamberName, Mode=TwoWay}"
                  ItemsSource="{Binding ViewModel.Chambername, Mode=OneWay}"
                  Width="140"
                  Margin="0,0,8,0"
                  VerticalAlignment="Center"/>
                    <ui:Button x:Name="btnLogsearch"
                   Content="Search"
                   Command="{Binding ViewModel.SearchCommand}"
                   Margin="0,0,8,0"
                   Foreground="White"
                   Height="30"
                   Padding="18,0"
                   VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 오른쪽: 뒤로가기 버튼 -->
                <ui:Button x:Name="btnBack"
               DockPanel.Dock="Right"
               Click="btnBack_Click"
               MouseOverBackground="LightGray"
               Height="32"
               Width="42"
               HorizontalAlignment="Right"
               Margin="0,0,0,0"
               VerticalAlignment="Center">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>
        <!-- 본문 카드 -->
        <Border Grid.Row="1" Background="#1A2233" CornerRadius="12" Margin="18" Padding="18" Effect="{DynamicResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:TextBlock Text="IP" Foreground="White" HorizontalAlignment="Center"/>
                        <ui:TextBlock Text="{Binding ViewModels.IP, Mode=TwoWay}" HorizontalAlignment="Center" Width="209"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:TextBlock Text="Port" Foreground="White" HorizontalAlignment="Center"/>
                        <ui:TextBlock Text="{Binding ViewModels.Port, Mode=TwoWay}" HorizontalAlignment="Center" Width="209"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:TextBlock Text="Device ID" Foreground="White" HorizontalAlignment="Center"/>
                        <ui:TextBlock Text="{Binding ViewModels.DeviceID, Mode=TwoWay}" HorizontalAlignment="Center" Width="209"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
