<Page x:Class="SemiConductor_Equipment.Views.Menus.IpSettingMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance local:IpSettingMenu, IsDesignTimeCreatable=False}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="IP_Setting"
        KeepAlive="True"
        Background="#232C39">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ViewModels.InitCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 바 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <DockPanel>
                <TextBlock Text="IP Setting"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                <ui:Button x:Name="btnBack"
                   Grid.Column="1"
                   Click="btnBack_Click"
                   MouseOverBackground="LightGray"
                   Height="34"
                   Width="44"
                   Margin="0,10,14,10"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                        </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>

        <!-- 본문 카드 -->
        <Border Grid.Row="1" Background="#1A2233" CornerRadius="18" Margin="24" Padding="32" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="네트워크 정보 입력" 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               Foreground="#B0C4DE"
                               HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,24">
                    <!-- IP -->
                    <StackPanel>
                        <TextBlock Text="IP" Foreground="#B0C4DE" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                        <TextBox Text="{Binding ViewModels.IP, Mode=TwoWay}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Background="#2E3B4E"
                                     Foreground="White"
                                     BorderBrush="#3A88FE"
                                     BorderThickness="2"
                                     Padding="12,6"
                                     Width="180"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     CaretBrush="#3A88FE"
                                     />
                    </StackPanel>
                    <!-- Port -->
                    <StackPanel>
                        <TextBlock Text="Port" Foreground="#B0C4DE" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                        <TextBox Text="{Binding ViewModels.Port, Mode=TwoWay}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Background="#2E3B4E"
                                     Foreground="White"
                                     BorderBrush="#3A88FE"
                                     BorderThickness="2"
                                     Padding="12,6"
                                     Width="180"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     CaretBrush="#3A88FE"
                                     />
                    </StackPanel>
                    <!-- Device ID -->
                    <StackPanel>
                        <TextBlock Text="Device ID" Foreground="#B0C4DE" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                        <TextBox Text="{Binding ViewModels.DeviceID, Mode=TwoWay}"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Background="#2E3B4E"
                                     Foreground="White"
                                     BorderBrush="#3A88FE"
                                     BorderThickness="2"
                                     Padding="12,6"
                                     Width="180"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     CaretBrush="#3A88FE"
                                     />
                    </StackPanel>
                </UniformGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="초기화"
                                Command="{Binding ViewModels.InitCommand}"
                                Width="140"
                                Height="40"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Background="#263043"
                                Foreground="White"
                                BorderBrush="#3A88FE"
                                BorderThickness="2"
                                Cursor="Hand"
                                Margin="0,0,8,0"/>
                    <Button Content="저장"
                                Command="{Binding ViewModels.SaveCommand}"
                                Width="140"
                                Height="40"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Background="#3A88FE"
                                Foreground="White"
                                BorderBrush="#3A88FE"
                                BorderThickness="2"
                                Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
