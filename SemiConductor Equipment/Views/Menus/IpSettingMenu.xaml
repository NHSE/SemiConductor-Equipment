<Page x:Class="SemiConductor_Equipment.Views.Menus.IpSettingMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance local:IpSettingMenu, IsDesignTimeCreatable=False}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="IP_Setting"
        KeepAlive="True"
        Background="#232C39">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ViewModels.InitCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#263043" CornerRadius="9" Margin="18,18,18,8" Padding="12" Effect="{DynamicResource DropShadow}">
            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                <!-- 왼쪽: Chamber 선택, 검색 -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <ui:TextBlock Text="IP Setting" Height="21" FontSize="20" FontFamily="Calibri" Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 오른쪽: 뒤로가기 버튼 -->
                <ui:Button x:Name="btnBack"
               DockPanel.Dock="Right"
               Click="btnBack_Click"
               MouseOverBackground="LightGray"
               Height="32"
               Width="42"
               HorizontalAlignment="Right"
               Margin="0,0,0,0"
               VerticalAlignment="Center">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>
        <!-- 본문 카드 -->
        <Border Grid.Row="1" Background="#1A2233" CornerRadius="12" Margin="18" Padding="18" Effect="{DynamicResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ui:TextBlock Text="IP" Foreground="White" HorizontalAlignment="Center"/>
                            <ui:TextBox Text="{Binding ViewModels.IP, Mode=TwoWay}" FontSize="30" Background="DarkGray" HorizontalAlignment="Center" Width="209"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ui:TextBlock Text="Port" Foreground="White" HorizontalAlignment="Center"/>
                            <ui:TextBox Text="{Binding ViewModels.Port, Mode=TwoWay}" FontSize="30" Background="DarkGray" HorizontalAlignment="Center" Width="209"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ui:TextBlock Text="Device ID" Foreground="White" HorizontalAlignment="Center"/>
                            <ui:TextBox Text="{Binding ViewModels.DeviceID, Mode=TwoWay}" FontSize="30" Background="DarkGray" HorizontalAlignment="Center" Width="209"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <ui:Button Content="Initalize" Command="{Binding ViewModels.InitCommand}" HorizontalAlignment="Center" Height="29" Width="236" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <ui:Button Content="Save" Command="{Binding ViewModels.SaveCommand}" HorizontalAlignment="Center" Height="29" Width="236" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
