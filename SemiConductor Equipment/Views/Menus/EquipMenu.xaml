<Page x:Class="SemiConductor_Equipment.Views.Menus.EquipMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      Title="EquipMenu"
      d:DataContext="{d:DesignInstance local:EquipMenu, IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      Background="#232C39">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ViewModel.InitCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 바 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <DockPanel>
                <TextBlock Text="Equipment Setting"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <ui:Button x:Name="btnBack"
                           Grid.Column="1"
                           Click="btnBack_Click"
                           MouseOverBackground="LightGray"
                           Height="34"
                           Width="44"
                           Margin="0,10,14,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"> 
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>

        <!-- 본문 카드 -->
        <Border Grid.Row="1" Background="#1A2233" CornerRadius="18" Margin="24" Padding="32" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="AUTO"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel>
                        <TextBlock Text="Clean Setting"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>

                        <Border Background="DarkGray" CornerRadius="18" Margin="24" Padding="32" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="RPM" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="tbrpm" Text="{Binding ViewModel.Rpm, Mode=TwoWay}"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Background="#2E3B4E"
                                                Foreground="White"
                                                BorderBrush="#3A88FE"
                                                BorderThickness="2"
                                                Padding="12,6"
                                                Width="100"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                CaretBrush="#3A88FE"
                                                PreviewTextInput="VerPreviewTextInput"
                                                 Margin="110 0 0 0"
                                                />
                                        <TextBlock Text="r/min" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Chemical Flow Rate" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="tbchemical" Text="{Binding ViewModel.FlowRate, Mode=TwoWay}"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Background="#2E3B4E"
                                                Foreground="White"
                                                BorderBrush="#3A88FE"
                                                BorderThickness="2"
                                                Padding="12,6"
                                                Width="100"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                CaretBrush="#3A88FE"
                                                PreviewTextInput="VerPreviewTextInput"
                                                Margin="100 0 0 0"
                                                />
                                        <TextBlock Text="L/min" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Spray Time" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="tbSpraytime" Text="{Binding ViewModel.Spraytime, Mode=TwoWay}"
                                                FontSize="24"
                                                FontWeight="Bold"
                                                Background="#2E3B4E"
                                                Foreground="White"
                                                BorderBrush="#3A88FE"
                                                BorderThickness="2"
                                                Padding="12,6"
                                                Width="100"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                CaretBrush="#3A88FE"
                                                PreviewTextInput="VerPreviewTextInput"
                                                Margin="50 0 0 0"
                                                />
                                        <TextBlock Text="Min" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel>
                        <TextBlock Text="Heating Setting"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0 20 0 0"/>

                        <Border Background="DarkGray" CornerRadius="18" Margin="24" Padding="32" >
                            <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Min Temperature" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <TextBox Text="{Binding ViewModel.Min_temperature, Mode=TwoWay}"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Background="#2E3B4E"
                                        Foreground="White"
                                        BorderBrush="#3A88FE"
                                        BorderThickness="2"
                                        Padding="12,6"
                                        Width="180"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        CaretBrush="#3A88FE"
                                        PreviewTextInput="VerPreviewTextInput"
                                        />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                    <TextBlock Text="Max Temperature" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                        <TextBox Text="{Binding ViewModel.Max_temperature, Mode=TwoWay}"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Background="#2E3B4E"
                                            Foreground="White"
                                            BorderBrush="#3A88FE"
                                            BorderThickness="2"
                                            Padding="12,6"
                                            Width="180"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            CaretBrush="#3A88FE"
                                            PreviewTextInput="VerPreviewTextInput"
                                            />
                                </StackPanel>
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Allowable" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="±" FontSize="30"/>
                                        <TextBox x:Name="tbAllowable" Text="{Binding ViewModel.Allowable, Mode=TwoWay}"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Background="#2E3B4E"
                                        Foreground="White"
                                        BorderBrush="#3A88FE"
                                        BorderThickness="2"
                                        Padding="12,6"
                                        Width="100"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        CaretBrush="#3A88FE"
                                        PreviewTextInput="VerPreviewTextInput"
                                        />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="Chamber Time" Foreground="Black" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox  Text="{Binding ViewModel.Chambertime, Mode=TwoWay}"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Background="#2E3B4E"
                                        Foreground="White"
                                        BorderBrush="#3A88FE"
                                        BorderThickness="2"
                                        Padding="12,6"
                                        Width="100"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        CaretBrush="#3A88FE"
                                        PreviewTextInput="VerPreviewTextInput"
                                        Margin="50 0 0 0"
                                        />
                                        <TextBlock Text="sec" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2">
                    <StackPanel>
                        <ui:Button Command="{Binding ViewModel.SaveCommand}" Content="Save" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0 40 0 0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
