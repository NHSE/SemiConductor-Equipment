<Page x:Class="SemiConductor_Equipment.Views.Menus.EventMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:conv="clr-namespace:SemiConductor_Equipment.Coverter"
      xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
      d:DataContext="{d:DesignInstance local:EventMenu, IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      Background="#232C39"
      Title="EventMenu">

    <Page.Resources>
        <conv:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 바 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <DockPanel>
                <TextBlock Text="Event Setting"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    VerticalAlignment="Center"/>
                <ui:Button x:Name="btnBack"
                    Grid.Column="1"
                    Click="btnBack_Click"
                    MouseOverBackground="LightGray"
                    Height="34"
                    Width="44"
                    Margin="0,10,14,10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
                <StackPanel>
                    <ui:TextBox Text="CEID Setting" Focusable="False"/>
                    <ui:DataGrid ItemsSource="{Binding ViewModel.CEID}" MouseDoubleClick="DataGrid_MouseDoubleClick" FontSize="13" AutoGenerateColumns="False"
                        Background="#232C39" Foreground="White" HeadersVisibility="Column" GridLinesVisibility="None" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Height="200" CanUserAddRows="False" >
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CEID" Binding="{Binding Number}" >
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#444D5C"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="State">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:ToggleSwitch
                                        IsChecked="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="60"
                                        Height="25"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="SVID">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border 
                                            Background="Transparent" 
                                            CornerRadius="6" 
                                            Margin="2"
                                            Padding="4,2">
                                            <TextBlock Text="{Binding SVIDsDisplay}"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding SVIDsDisplay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <!-- 나머지 속성은 숨김 -->
                        </DataGrid.Columns>
                    </ui:DataGrid>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
                <StackPanel>
                    <ui:TextBox Text="RPTID Setting"/>
                    <ui:DataGrid ItemsSource="{Binding Waferinfo}" RowHeight="32" FontSize="13" AutoGenerateColumns="False"
                        Background="#232C39" Foreground="White" HeadersVisibility="Column" GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PRTID" Binding="{Binding SlotId}" />
                            <DataGridTemplateColumn Header="State">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:ToggleSwitch
                                        IsChecked="{Binding CJId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Content="{Binding CJId, Converter={StaticResource BoolToOnOffConverter}}"
                                        Width="60"
                                        Height="25"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="CEID" Binding="{Binding CurrentLocation}" />
                            <!-- 나머지 속성은 숨김 -->
                        </DataGrid.Columns>
                    </ui:DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
