      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:conv="clr-namespace:SemiConductor_Equipment.Coverter"
      xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
      d:DataContext="{d:DesignInstance local:ChemicalSettingMenu, IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      Loaded="Page_Load"
      Background="#232C39"
      Title="EventMenu">

    <Page.Resources>
        <conv:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 바 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <DockPanel>
                <TextBlock Text="Chemical Setting"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    VerticalAlignment="Center"/>
                <ui:Button x:Name="btnBack"
                    Grid.Column="1"
                    Click="btnBack_Click"
                    MouseOverBackground="LightGray"
                    Height="34"
                    Width="44"
                    Margin="0,10,14,10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>
        <Border Grid.Row="1" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <TabControl x:Name="tabcontrol" SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Chamber 1" IsSelected="True">
                    <Border Background="#263050">
                        <StackPanel Orientation="Horizontal">
                            <Grid Margin="130,50,50,50" RenderTransformOrigin="0.505,0.045">
                                <Image Source="/Resources/ChemicalTank.png" Width="248" Height="380" Margin="0 0 50 0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                    </Image.RenderTransform>
                                </Image>
                                <Rectangle 
                                    x:Name="FillLevel1"
                                           VerticalAlignment="Bottom"
                                           Fill="LightBlue"
                                           Height="50" 
                                           Width="300"
                                           Opacity="0.7"
                                           RadiusX="40" RadiusY="40"
                                           Margin="25 0 0 -20">
                                </Rectangle>
                                <Rectangle x:Name="ClickArea1"
                                           Height="370" 
                                           Width="330"
                                           Fill="Transparent"
                                           MouseDown="ClickArea_MouseDown"
                                           MouseMove="ClickArea_MouseMove"/>
                            </Grid>
                            <StackPanel Orientation="Vertical" Margin="100">
                                <TextBlock Text="Chemical" FontSize="40" Foreground="White" Background="#263043"/>
                                <TextBlock Text="{Binding ViewModel.Chamber1, StringFormat='{}{0} (L)'}" FontSize="40" Foreground="White" Margin="10 10 0 0"/>
                                <ui:Button  Content="Save" Command="{Binding ViewModel.SaveCommand}" CommandParameter="Chamber1"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>
