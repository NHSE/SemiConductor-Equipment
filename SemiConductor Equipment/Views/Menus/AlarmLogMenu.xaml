<Page x:Class="SemiConductor_Equipment.Views.Menus.AlarmLogMenu"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Menus"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance local:AlarmLogMenu, IsDesignTimeCreatable=False}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="IP_Setting"
        KeepAlive="True"
        Background="#232C39">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 바 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="12" Margin="24,24,24,12" Padding="18" >
            <DockPanel>
                <TextBlock Text="Alarm Log"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                <ui:Button x:Name="btnBack"
                   Grid.Column="1"
                   Click="btnBack_Click"
                   MouseOverBackground="LightGray"
                   Height="34"
                   Width="44"
                   Margin="0,10,14,10"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </DockPanel>
        </Border>

        <!-- 본문 카드 -->
        <Border Grid.Row="1" Background="#1A2233" CornerRadius="18" Margin="24" Padding="32" >
            <ui:DataGrid ItemsSource="{Binding ViewModel.AlarmMsg}" AutoGenerateColumns="False" Margin="0 0 0 0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Alarm Number" Binding="{Binding AlarmNum}"/>
                    <DataGridTextColumn Header="Alarm Time" Binding="{Binding AlarmTime}" />
                    <DataGridTextColumn Header="Alarm Message" Binding="{Binding AlarmMsg}" />
                </DataGrid.Columns>
            </ui:DataGrid>
        </Border>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <ui:Button Content="History" Click="btnHistory_Click" Width="120" Height="40" Margin="0 0 20 15"/>
                <ui:Button Content="Clear" Command="{Binding ViewModel.ClearCommand}" Width="120" Height="40" Margin="0 0 20 15"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
