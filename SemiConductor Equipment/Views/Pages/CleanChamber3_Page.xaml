<Page x:Class="SemiConductor_Equipment.Views.Pages.CleanChamber3_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:SemiConductor_Equipment.Controls"
      xmlns:local="clr-namespace:SemiConductor_Equipment.Views.Pages"
      d:DataContext="{d:DesignInstance local:CleanChamber3_Page, IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CleanChamber3_Page"
      Loaded="Page_Loaded"
      Background="#232C39"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 바: 정보 + 뒤로가기 버튼 -->
        <Border Grid.Row="0" Background="#263043" CornerRadius="8" Margin="12,12,12,8" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="16,0,0,0">
                    <ui:TextBlock Text="Clean Chamber 3" FontWeight="Bold" FontSize="18" Foreground="White"/>
                    <ui:TextBlock Text="상태: Ready" Foreground="LightGreen" FontSize="13"/>
                </StackPanel>
                <ui:Button x:Name="btnBack"
               Grid.Column="1"
               Click="btnBack_Click"
               MouseOverBackground="LightGray"
               Height="34"
               Width="44"
               Margin="0,10,14,10"
               VerticalAlignment="Center"
               HorizontalAlignment="Right">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Backspace24" Foreground="Black"/>
                    </ui:Button.Icon>
                </ui:Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1A2233" CornerRadius="12" Margin="12" Padding="18">
                <StackPanel>
                    <ui:TextBlock Text="{Binding ViewModel.Chemical, StringFormat = 'Chemical Remaining : {0} L'}" Foreground="LightGreen" FontSize="13"/>
                    <Canvas x:Name="CleanChamberCanvas" Margin="0,0,-8,-8" Height="279">
                        <!-- 멀티컵 -->
                        <Image x:Name="ImageMutiCup" Source="/Resources/test.png"
                            Width="200" Height="200" Canvas.Left="7" Canvas.Top="108" />
                        <Image x:Name="ImageChamber" Source="/Resources/test2.png"
                            Width="250" Height="300" Canvas.Left="-18" Canvas.Top="-25" />
                    </Canvas>
                </StackPanel>
            </Border>

            <!-- 하단: 웨이퍼 상세 목록 -->
            <Border Grid.Column="1" Background="#263043" CornerRadius="8" Margin="12" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <controls:LoadingControl x:Name="searchDataLoadingControl" Visibility="Visible" Margin="184,113,184,113" Grid.RowSpan="2"/>
                    <ui:DataGrid x:Name="dtgLogViewer"
                ItemsSource="{Binding ViewModel.Logpagetable, Mode=OneWay}"
                Visibility="Collapsed"
                Grid.Row="1"
                RowHeight="32"
                FontSize="13"
                Background="#232C39"
                Foreground="#F7F7FA"
                GridLinesVisibility="Vertical"
                BorderThickness="0"
                HeadersVisibility="Column"
                Margin="0">
                    </ui:DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
