<Window x:Class="SemiConductor_Equipment.Views.Windows.CarrierSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ResizeMode="NoResize"
        Title="Wafer Loader" Height="444" Width="353" Background="#232C39">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="340"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <CheckBox Content="All" HorizontalAlignment="Right" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        </Grid>
        <Grid Grid.Row="1">
            <Canvas x:Name="ImageCanvas"
                MouseLeftButtonDown="ImageCanvas_MouseLeftButtonDown"
                MouseRightButtonDown="ImageCanvas_MouseRightButtonDown">
                <Image Source="/Resources/LoadPort.png" 
                   Stretch="Uniform" 
                   Width="263" 
                   Height="323"
                   Canvas.Left="48" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <ui:Button x:Name="btnset" Click="btnset_Click" Content="Set" HorizontalAlignment="Center" Height="40" Width="100"/>
            </Grid>
        </Grid>
    </Grid>
</Window>